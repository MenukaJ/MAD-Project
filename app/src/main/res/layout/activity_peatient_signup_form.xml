<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".PeatientSignup_form">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="160dp"
        android:layout_marginTop="39dp"
        android:fontFamily="serif"
        android:text="Register"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editpaientNAme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="103dp"
        android:background="@drawable/button_round"
        android:fontFamily="serif"
        android:hint="Name"
        android:padding="8dp"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/editPatientAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editpaientNAme"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="-1dp"
        android:background="@drawable/button_round"
        android:fontFamily="serif"
        android:hint="Age"
        android:padding="8dp"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPatientAge"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:background="@drawable/button_round"
        android:fontFamily="serif"
        android:hint="Email"
        android:padding="8dp"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editEmail"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/button_round"
        android:fontFamily="serif"
        android:hint="Password"
        android:padding="8dp"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnAddPacient"
        android:layout_width="188dp"
        android:layout_height="57dp"
        android:layout_below="@+id/password"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="59dp"
        android:background="@drawable/button_for_submit"
        android:fontFamily="serif"
        android:onClick="AddEmployee"
        android:text="Add" />

</RelativeLayout>