<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:visibility="visible">

    <Button
        android:id="@+id/button2"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="146dp"
        android:background="@drawable/button_round"
        android:onClick="onButtonClickedAdminLogin"
        android:text="@string/adminlogin" />

    <Button
        android:id="@+id/button4"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/button_round"
        android:onClick="onButtonClickedPatientLogin"
        android:text="@string/patientlogin" />

    <Button
        android:id="@+id/button5"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="91dp"
        android:layout_marginBottom="207dp"
        android:background="@drawable/button_round"
        android:onClick="onButtonClickedDoctorLogin"
        android:text="@string/doctorlogin" />
</RelativeLayout>