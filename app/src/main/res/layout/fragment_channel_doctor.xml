        android:hint="Enter Resaon"
        android:padding="8dp"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/edithos"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/BtnAddFeedback"
