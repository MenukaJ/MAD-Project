        android:layout_gravity="center"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/button_for_submit"
        android:fontFamily="serif"
        android:onClick="AddEmployee"
        android:text="Add" />


